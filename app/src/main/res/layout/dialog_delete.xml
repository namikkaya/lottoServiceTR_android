<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="@dimen/lMargin"
        android:layout_marginLeft="@dimen/standartMargin"
        android:layout_marginRight="@dimen/standartMargin"
        android:id="@+id/dialogLuckyNumbers"
        android:textAlignment="center"
        android:text="06 - 07 - 10 - 54 - 15 - 44"
        android:textSize="@dimen/xlSize"
        android:textColor="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/lSize"
        android:layout_marginLeft="@dimen/standartMargin"
        android:layout_marginRight="@dimen/standartMargin"
        android:layout_marginBottom="@dimen/standartMargin"
        android:layout_margin="@dimen/sMargin"
        android:id="@+id/dialogComment"
        android:text="@string/dialog_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
